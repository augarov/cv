{{ static.disclaimer }}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary Meta Tags -->
    <title>{{ metadata.pdf_title }}</title>
    <meta name="title" content="{{ metadata.pdf_title }}">
    <meta name="author" content="{{ metadata.pdf_author }}">
    <meta name="description" content="{{ personal.summary | markdown_plain }}">
    <meta name="keywords" content="{{ metadata.pdf_keywords }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="google" content="notranslate">
    <meta name="robots" content="index, follow">
    <meta name="language" content="English">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ metadata.url }}">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">
    <link rel="icon" type="image/png" href="/img/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/img/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="{{ metadata.app_name }}" />
    <link rel="manifest" href="/img/favicon/site.webmanifest" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/src/styles.css">

    <!-- Preload critical resources -->
    <link rel="preload" href="/cv.pdf" as="document">
    <link rel="preload" href="/src/pdfjs/web/viewer.html" as="document">

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="//github.com">

    <!-- Main script -->
    <script type="module" src="/src/main.js"></script>
</head>

<body>
    <!-- PDF Viewer (hidden by default) -->
    <div id="pdfViewerContainer" style="display: none;">
        <iframe id="pdfViewerIframe" width="100%" height="100%" frameborder="0">
        </iframe>
    </div>

    <!-- Fallback interface (visible by default) -->
    <div id="accessibleContainer">
        <h1>{{ metadata.pdf_title }}</h1>

        <p>
            Email:
            <a href="mailto:{{ personal.contact.email }}">{{ personal.contact.email }}</a>
            / LinkedIn:
            <a href="{{ personal.contact.linkedin.url }}">{{ personal.contact.linkedin.display_name }}</a>
            / Telegram:
            <a href="{{ personal.contact.telegram.url }}">{{ personal.contact.telegram.display_name }}</a>
            / GitHub:
            <a href="{{ personal.contact.github.url }}">{{ personal.contact.github.display_name }}</a>
        </p>

        <hr>

        <p>Please download or view the CV</p>
        <a id="cvDownloadButton" download="{{ metadata.pdf_filename }}">Download CV as PDF</a>
        <br>
        <a id="cvOpenInNewTabButton" href="{{ metadata.pdf_url }}" target="_blank">Open in New Tab</a>
        <br>
        <a id="cvOpenInPdfViewerButton" href="?" style="display: none;">Open in PDF Viewer</a>

        <hr>

        <h2>Summary</h2>
        <p>{{ personal.summary | markdown_plain }}</p>

        <hr>

        <h2>Experience</h2>
        {% for job in experience %}
        <h3>{{ job.company }}</h3>
        <p>{{ job.position }} / {{ job.period }}</p>
        <p>{{ job.location }}</p>
        <p>{{ job.description | markdown_plain }}</p>
        <ul>
            {% for achievement in job.achievements %}
            <li>{{ achievement | markdown_plain }}</li>
            {% endfor %}
        </ul>
        <p>Tech Stack: {{ job.stack }}</p>
        {% endfor %}

        <hr>

        <h2>Skills</h2>
        {% for skill_category in skills %}
        <h3>{{ skill_category.category }}</h3>
        <p>{{ skill_category.skills | join(", ") }}</p>
        {% endfor %}

        <hr>

        <h2>Education</h2>
        {% for edu in education %}
        <h3>{{ edu.institution }}</h3>
        <p>{{ edu.degree }} / {{ edu.period }}</p>
        <p>{{ edu.location }}</p>
        <p>{{ edu.specialization }}</p>
        <p>{{ edu.focus }}</p>
        <p>Cum. GPA: {{ edu.gpa.cumulative }}</p>
        <p>Major GPA: {{ edu.gpa.major }}</p>
        {% endfor %}

        <hr>

        <h2>Languages</h2>
        {% for lang in languages %}
        <p>{{ lang.language }} / {{ lang.level }}</p>
        {% endfor %}

    </div>
</body>

</html>
