<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Primary Meta Tags -->
    <title>{{ metadata.pdf_title }}</title>
    <meta name="title" content="{{ metadata.pdf_title }}">
    <meta name="author" content="{{ metadata.pdf_author }}">
    <meta name="description" content="{{ personal.summary | markdown_plain }}">
    <meta name="keywords" content="{{ metadata.pdf_keywords }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="google" content="notranslate">
    <meta name="robots" content="index, follow">
    <meta name="language" content="English">

    <!-- Canonical URL -->
    <link rel="canonical" href="{{ metadata.url }}">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.png">
    <link rel="icon" type="image/png" href="/img/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/img/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/img/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="{{ metadata.app_name }}" />
    <link rel="manifest" href="/img/favicon/site.webmanifest" />

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/src/styles.css">

    <!-- Preload critical resources -->
    <link rel="preload" href="/cv.pdf" as="document">
    <link rel="preload" href="/src/pdfjs/web/viewer.html" as="document">

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="//github.com">

    <!-- Main script -->
    <script type="module" src="/src/main.js"></script>
</head>

<body>
    <!-- PDF Viewer (hidden by default) -->
    <div id="pdfViewerContainer" style="display: none;">
        <iframe id="pdfViewerIframe" width="100%" height="100%" frameborder="0">
        </iframe>
    </div>

    <!-- Fallback interface (visible by default) -->
    <main id="accessibleContainer" class="cvContainer">
        <!-- Header Section -->
        <header class="cvHeader">
            <h1 class="cvName">
                <span class="firstName">{{ personal.name.first }}</span>
                <span class="lastName">{{ personal.name.last }}</span>
                <br>
                <span class="jobTitle">{{ personal.title }}</span>
            </h1>
        </header>

        <hr>

        <!-- Contact Information Section -->
        <section class="cvSection cvContact" aria-labelledby="contactHeading">
            <div class="contactInfoGrid">
                <div class="contactItem contactEmail">
                    <span class="contactLabel">Email:</span>
                    <a href="mailto:{{ personal.contact.email }}" class="contactLink">
                        {{ personal.contact.email }}
                    </a>
                </div>
                <div class="contactItem contactLinkedin">
                    <span class="contactLabel">LinkedIn:</span>
                    <a href="{{ personal.contact.linkedin.url }}" class="contactLink" target="_blank" rel="noopener">
                        {{ personal.contact.linkedin.display_name }}
                    </a>
                </div>
                <div class="contactItem contactTelegram">
                    <span class="contactLabel">Telegram:</span>
                    <a href="{{ personal.contact.telegram.url }}" class="contactLink" target="_blank" rel="noopener">
                        {{ personal.contact.telegram.display_name }}
                    </a>
                </div>
                <div class="contactItem contactGithub">
                    <span class="contactLabel">GitHub:</span>
                    <a href="{{ personal.contact.github.url }}" class="contactLink" target="_blank" rel="noopener">
                        {{ personal.contact.github.display_name }}
                    </a>
                </div>
            </div>
        </section>

        <hr>

        <!-- Download Options Section -->
        <section class="cvSection cvDownload" aria-labelledby="downloadHeading">
            <div class="downloadInfo">
                <p class="downloadDescription">Download or view the CV:</p>
                <ul class="downloadOptions">
                    <li class="downloadOption">
                        <a id="cvDownloadButton" download="{{ metadata.pdf_filename }}"
                            class="downloadLink downloadPdf">Download CV as PDF</a>
                    </li>
                    <li class="downloadOption">
                        <a id="cvOpenInNewTabButton" href="{{ metadata.pdf_url }}" target="_blank"
                            class="downloadLink openNewTab">Open in New Tab</a>
                    </li>
                    <li class="downloadOption">
                        <a id="cvOpenInPdfViewerButton" href="?" style="display: none;"
                            class="downloadLink openViewer">Open in PDF Viewer</a>
                    </li>
                </ul>
            </div>
        </section>

        <hr>

        <!-- Summary Section -->
        <section class="cvSection cvSummary" aria-labelledby="summaryHeading">
            <h2 id="summaryHeading" class="cvSectionTitle">Summary</h2>
            <div class="summaryContent">
                <p class="summaryText">{{ personal.summary | markdown_plain }}</p>
            </div>
        </section>

        <hr>

        <!-- Experience Section -->
        <section class="cvSection cvExperience" aria-labelledby="experienceHeading">
            <h2 id="experienceHeading" class="cvSectionTitle">Experience</h2>
            <div class="experienceList">
                {% for job in experience %}
                <article class="experienceItem">
                    <header class="experienceHeader">
                        <h3 class="companyName">{{ job.company }}</h3>
                        <div class="jobMeta">
                            <b><span class="jobPosition">{{ job.position }}</span></b>
                            /
                            <span class="jobPeriod">{{ job.period }}</span>
                            /
                            <span class="jobLocation">{{ job.location }}</span>
                        </div>
                    </header>
                    <div class="experienceContent">
                        <p class="jobDescription">{{ job.description | markdown_plain }}</p>
                        <ul class="achievementsList">
                            {% for achievement in job.achievements %}
                            <li class="achievementItem">{{ achievement | markdown_plain }}</li>
                            {% endfor %}
                        </ul>
                        <div class="techStack">
                            <b><span class="techStackLabel">Tech Stack:</span></b>
                            <i><span class="techStackList">{{ job.stack }}</span></i>
                        </div>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>

        <hr>

        <!-- Skills Section -->
        <section class="cvSection cvSkills" aria-labelledby="skillsHeading">
            <h2 id="skillsHeading" class="cvSectionTitle">Skills</h2>
            <div class="skillsList">
                {% for skill_category in skills %}
                <div class="skillCategory">
                    <h3 class="skillCategoryName">{{ skill_category.category }}</h3>
                    <div class="skillItems">
                        <span class="skillList">{{ skill_category.skills | join(", ") }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <hr>

        <!-- Education Section -->
        <section class="cvSection cvEducation" aria-labelledby="educationHeading">
            <h2 id="educationHeading" class="cvSectionTitle">Education</h2>
            <div class="educationList">
                {% for edu in education %}
                <article class="educationItem">
                    <header class="educationHeader">
                        <h3 class="institutionName">{{ edu.institution }}</h3>
                        <div class="educationMeta">
                            <span class="degreeName">{{ edu.degree }}</span>
                            <span class="educationPeriod">{{ edu.period }}</span>
                            <span class="educationLocation">{{ edu.location }}</span>
                        </div>
                    </header>
                    <div class="educationContent">
                        <p class="specialization">{{ edu.specialization }}</p>
                        <p class="focusArea">{{ edu.focus }}</p>
                        <div class="gpaInfo">
                            <span class="gpaItem">
                                <b><span class="gpaLabel">Cum. GPA:</span></b>
                                <span class="gpaValue">{{ edu.gpa.cumulative }}</span>
                            </span>
                            <br>
                            <span class="gpaItem">
                                <b><span class="gpaLabel">Major GPA:</span></b>
                                <span class="gpaValue">{{ edu.gpa.major }}</span>
                            </span>
                        </div>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>

        <hr>

        <!-- Languages Section -->
        <section class="cvSection cvLanguages" aria-labelledby="languagesHeading">
            <h2 id="languagesHeading" class="cvSectionTitle">Languages</h2>
            <div class="languagesList">
                {% for lang in languages %}
                <div class="languageItem">
                    <span class="languageName">{{ lang.language }}</span>
                    /
                    <span class="languageLevel">{{ lang.level }}</span>
                </div>
                {% endfor %}
            </div>
        </section>

    </main>
</body>

</html>
