<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metadata.pdf_title }}</title>
    <meta name="author" content="{{ metadata.pdf_author }}">
    <meta name="description" content="{{ personal.summary }}">
    <meta name="keywords" content="{{ metadata.pdf_keywords }}">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .name {
            font-size: 2.5em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .title {
            font-size: 1.3em;
            color: #666;
            margin-bottom: 15px;
        }

        .summary {
            font-size: 1.1em;
            max-width: 800px;
            margin: 0 auto;
        }

        .contact {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .contact-item {
            display: inline-block;
            margin-right: 20px;
        }

        .section {
            margin: 30px 0;
        }

        .section h2 {
            border-bottom: 2px solid #333;
            padding-bottom: 5px;
        }

        .experience-item, .education-item {
            margin-bottom: 25px;
        }

        .company {
            font-size: 1.2em;
            font-weight: bold;
        }

        .position {
            font-style: italic;
            color: #666;
        }

        .period-location {
            color: #888;
            font-size: 0.9em;
        }

        .description {
            margin: 10px 0;
        }

        .achievements {
            list-style-type: disc;
            margin-left: 20px;
        }

        .stack {
            font-style: italic;
            color: #666;
            margin-top: 10px;
        }

        .skills-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
        }

        .skill-category {
            background: #f9f9f9;
            padding: 15px;
            border-radius: 5px;
        }

        .skill-category h3 {
            margin-top: 0;
            color: #333;
        }

        .skill-list {
            list-style: none;
            padding: 0;
        }

        .skill-list li {
            padding: 3px 0;
        }

        .languages {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .language-item {
            background: #e9e9e9;
            padding: 8px 12px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="name">{{ personal.name.first | escape_html }} {{ personal.name.last | escape_html }}</div>
        <div class="title">{{ personal.title | escape_html }}</div>
        <div class="summary">{{ personal.summary | markdown_html }}</div>

        <div class="contact">
            <div class="contact-item">üìç {{ personal.location | escape_html }}</div>
            <div class="contact-item">‚úâÔ∏è <a href="mailto:{{ personal.contact.email }}">{{ personal.contact.email | escape_html }}</a></div>
            <div class="contact-item">üíº <a href="{{ personal.contact.linkedin.url }}">{{ personal.contact.linkedin.display_name | escape_html }}</a></div>
            <div class="contact-item">üí¨ <a href="{{ personal.contact.telegram.url }}">{{ personal.contact.telegram.display_name | escape_html }}</a></div>
            <div class="contact-item">üíª <a href="{{ personal.contact.github.url }}">{{ personal.contact.github.display_name | escape_html }}</a></div>
        </div>
    </div>

    <div class="section">
        <h2>Experience</h2>
        {% for job in experience %}
        <div class="experience-item">
            <div class="company">{{ job.company | escape_html }}</div>
            <div class="position">{{ job.position | escape_html }}</div>
            <div class="period-location">{{ job.period | escape_html }} | {{ job.location | escape_html }}</div>
            <div class="description">{{ job.description | markdown_html }}</div>
            <ul class="achievements">
                {% for achievement in job.achievements %}
                <li>{{ achievement | markdown_html }}</li>
                {% endfor %}
            </ul>
            <div class="stack"><strong>Stack:</strong> {{ job.stack | escape_html }}</div>
        </div>
        {% endfor %}
    </div>

    <div class="section">
        <h2>Skills</h2>
        <div class="skills-grid">
            {% for skill_category in skills %}
            <div class="skill-category">
                <h3>{{ skill_category.category | escape_html }}</h3>
                <ul class="skill-list">
                    {% for skill in skill_category.skills %}
                    <li>{{ skill | escape_html }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="section">
        <h2>Languages</h2>
        <div class="languages">
            {% for lang in languages %}
            <div class="language-item">
                <strong>{{ lang.language | escape_html }}</strong> / {{ lang.level | escape_html }}
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="section">
        <h2>Education</h2>
        {% for edu in education %}
        <div class="education-item">
            <div class="company">{{ edu.institution | escape_html }}</div>
            <div class="position">{{ edu.degree | escape_html }}</div>
            <div class="period-location">{{ edu.period | escape_html }} | {{ edu.location | escape_html }}</div>
            <div>{{ edu.specialization | escape_html }}</div>
            <div>Specialization: {{ edu.focus | escape_html }}</div>
            <div><strong>Cum. GPA:</strong> {{ edu.gpa.cumulative | escape_html }}</div>
            <div><strong>Major GPA:</strong> {{ edu.gpa.major | escape_html }}</div>
        </div>
        {% endfor %}
    </div>
</body>
</html>