<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metadata.pdf_title }}</title>
    <meta name="author" content="{{ metadata.pdf_author }}">
    <meta name="description" content="{{ personal.summary }}">
    <meta name="keywords" content="{{ metadata.pdf_keywords }}">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .header .title {
            font-size: 1.3em;
            color: #3498db;
            margin-bottom: 15px;
        }

        .header .summary {
            font-style: italic;
            max-width: 800px;
            margin: 0 auto;
        }

        .contact {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 15px;
            flex-wrap: wrap;
        }

        .contact a {
            color: #3498db;
            text-decoration: none;
        }

        .contact a:hover {
            text-decoration: underline;
        }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 40px;
            margin-top: 30px;
        }

        @media (max-width: 768px) {
            .main-content {
                grid-template-columns: 1fr;
            }
        }

        .section {
            margin-bottom: 30px;
        }

        .section h2 {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
            padding-bottom: 5px;
            margin-bottom: 15px;
        }

        .skills-category {
            margin-bottom: 15px;
        }

        .skills-category h3 {
            color: #34495e;
            margin-bottom: 5px;
        }

        .skills-list {
            list-style: none;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .skills-list li {
            background: #ecf0f1;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.9em;
        }

        .languages {
            list-style: none;
        }

        .languages li {
            margin-bottom: 5px;
        }

        .experience-item, .education-item {
            margin-bottom: 25px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .experience-header, .education-header {
            margin-bottom: 10px;
        }

        .company, .institution {
            font-weight: bold;
            color: #2c3e50;
            font-size: 1.1em;
        }

        .position, .degree {
            color: #3498db;
            font-weight: 500;
        }

        .period, .location {
            color: #7f8c8d;
            font-size: 0.9em;
        }

        .achievements {
            list-style: none;
            margin: 10px 0;
        }

        .achievements li {
            margin-bottom: 5px;
            padding-left: 15px;
            position: relative;
        }

        .achievements li:before {
            content: "‚Ä¢";
            color: #3498db;
            position: absolute;
            left: 0;
        }

        .stack {
            margin-top: 10px;
            font-style: italic;
            color: #7f8c8d;
        }

        .gpa {
            margin-top: 5px;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <header class="header">
        <h1>{{ personal.name.first }} {{ personal.name.last }}</h1>
        <div class="title">{{ personal.title }}</div>
        <div class="summary">{{ personal.summary }}</div>

        <div class="contact">
            <span>üìç {{ personal.location }}</span>
            <a href="mailto:{{ personal.contact.email }}">‚úâÔ∏è {{ personal.contact.email }}</a>
            <a href="https://{{ personal.contact.linkedin }}" target="_blank">üíº LinkedIn</a>
            <a href="https://{{ personal.contact.telegram }}" target="_blank">üí¨ Telegram</a>
            <a href="https://{{ personal.contact.github }}" target="_blank">üêô GitHub</a>
        </div>
    </header>

    <div class="main-content">
        <aside class="sidebar">
            <section class="section">
                <h2>Skills</h2>
                {% for category, skill_list in skills.items() %}
                <div class="skills-category">
                    <h3>{{ category }}</h3>
                    <ul class="skills-list">
                        {% for skill in skill_list %}
                        <li>{{ skill }}</li>
                        {% endfor %}
                    </ul>
                </div>
                {% endfor %}
            </section>

            <section class="section">
                <h2>Languages</h2>
                <ul class="languages">
                    {% for lang in languages %}
                    <li><strong>{{ lang.language }}</strong> / {{ lang.level }}</li>
                    {% endfor %}
                </ul>
            </section>

            <section class="section">
                <h2>Education</h2>
                {% for edu in education %}
                <div class="education-item">
                    <div class="education-header">
                        <div class="institution">{{ edu.institution }}</div>
                        <div class="degree">{{ edu.degree }}</div>
                        <div class="period">{{ edu.period }} | {{ edu.location }}</div>
                    </div>
                    <div>{{ edu.specialization }}</div>
                    <div>Specialization: {{ edu.focus }}</div>
                    <div class="gpa">
                        <strong>Cum. GPA:</strong> {{ edu.gpa.cumulative }}<br>
                        <strong>Major GPA:</strong> {{ edu.gpa.major }}
                    </div>
                </div>
                {% endfor %}
            </section>
        </aside>

        <main class="content">
            <section class="section">
                <h2>Experience</h2>
                {% for job in experience %}
                <div class="experience-item">
                    <div class="experience-header">
                        <div class="company">{{ job.company }}</div>
                        <div class="position">{{ job.position }}</div>
                        <div class="period">{{ job.period }} | {{ job.location }}</div>
                    </div>

                    <p>{{ job.description }}</p>

                    <ul class="achievements">
                        {% for achievement in job.achievements %}
                        <li>{{ achievement }}</li>
                        {% endfor %}
                    </ul>

                    <div class="stack">
                        <strong>Stack:</strong> {{ job.stack }}
                    </div>
                </div>
                {% endfor %}
            </section>
        </main>
    </div>
</body>
</html>